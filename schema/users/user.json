{
    "type": "item",
    "properties": [
        {
            "id": "username",
            "type": "string",
            "subtype": "identifier",
            "unique": true,
            "nonCaseSensitiveUnique": true,
            "htmlAutocomplete": "username"
        },
        {
            "id": "app_language",
            "type": "string",
            "subtype": "language",
            "hidden": true,
            "searchable": false
        },
        {
            "id": "app_country",
            "type": "string",
            "subtype": "country",
            "hidden": true,
            "searchable": false
        },
        {
            "id": "app_currency",
            "type": "string",
            "subtype": "currency",
            "hidden": true,
            "searchable": false
        },
        {
            "id": "email",
            "type": "string",
            "subtype": "email",
            "searchable": false,
            "nullable": true,
            "readRoleAccess": ["ADMIN", "&OWNER"],
            "editRoleAccess": ["ADMIN", "&OWNER"]
        },
        {
            "id": "e_validated",
            "type": "boolean",
            "nullable": true,
            "default": false,
            "searchable": false,
            "createRoleAccess": ["ADMIN", "&OWNER"],
            "editRoleAccess": ["ADMIN", "&OWNER"],
            "coerceNullsIntoDefault": true
        },
        {
            "id": "e_notifications",
            "type": "boolean",
            "default": true,
            "nullable": true,
            "searchable": false,
            "readRoleAccess": ["&OWNER"],
            "editRoleAccess": ["ADMIN", "&OWNER"],
            "coerceNullsIntoDefault": true
        },
        {
            "id": "e_newsletter",
            "type": "boolean",
            "default": true,
            "nullable": true,
            "searchable": false,
            "readRoleAccess": ["&OWNER"],
            "editRoleAccess": ["ADMIN", "&OWNER"],
            "coerceNullsIntoDefault": true
        },
        {
            "id": "password",
            "type": "password",
            "htmlAutocomplete": "current-password",
            "disableRetrieval": true,
            "readRoleAccess": [],
            "editRoleAccess": ["ADMIN", "&OWNER"]
        },
        {
            "id": "role",
            "type": "string",
            "subtype": "role",
            "values": "$CONFIG:return config.roles;",
            "nullable": true,
            "default": "USER",
            "editRoleAccess": ["ADMIN"],
            "createRoleAccess": ["ADMIN"],
            "coerceNullsIntoDefault": true
        },
        {
            "id": "profile_picture",
            "type": "file",
            "specialProperties": {
                "imageUploader": true,
                "dimensions": "24 24x24 ; 48 48x48",
                "smallDimension": "96x96",
                "mediumDimension": "128x128",
                "largeDimension": "256x256"
            },
            "nullable": true,
            "editRoleAccess": ["ADMIN", "&OWNER"]
        },
        {
            "id": "address",
            "type": "location",
            "nullable": true,
            "readRoleAccess": ["&OWNER"],
            "searchable": false,
            "editRoleAccess": ["ADMIN", "&OWNER"]
        },
        {
            "id": "about_me",
            "type": "text",
            "specialProperties": {
                "supportsVideos": false,
                "supportsImages": false,
                "supportsFiles": false,
                "supportsLists": false,
                "supportsContainers": false,
                "supportsCustom": false,
                "supportsExternalLinks": true,
                "supportsLinks": true,
                "supportsQuote": false,
                "supportsRichClasses": false,
                "supportsTitle": true,
                "supportsCustomStyles": false,
                "supportsTemplating": false
            },
            "subtype": "html",
            "nullable": true,
            "searchable": false,
            "editRoleAccess": ["ADMIN", "&OWNER"]
        },
        {
            "id": "session_id",
            "type": "integer",
            "disableRetrieval": true,
            "searchable": false,
            "default": 0,
            "nullable": true,
            "hidden": true,
            "coerceNullsIntoDefault": true,
            "editRoleAccess": ["ADMIN", "&OWNER"]
        }
    ],
    "policies": {
        "edit": {
            "REQUIRES_PASSWORD_CONFIRMATION": {
                "roles": "$CONFIG:return config.roles.filter((r) => r !== 'ADMIN');",
                "properties": ["password"],
                "applyingProperties": ["username", "password"]
            }
        },
        "delete": {
            "REQUIRES_PASSWORD_CONFIRMATION": {
                "roles": "$CONFIG:return config.roles.filter((r) => r !== 'ADMIN');",
                "properties": ["password"]
            }
        }
    },
    "createRoleAccess": "$CONFIG:if(config.roles.includes('ADMIN')){return ['&GUEST', 'ADMIN']}else{return ['&GUEST']}",
    "editRoleAccess":"$CONFIG:if(config.roles.includes('ADMIN')){return ['&OWNER', 'ADMIN']}else{return ['&OWNER']}",
    "ownerIsObjectId": true
}